///////////////////////////////////////
// Setters for teh Cursor!
///////////////////////////////////////

function void setCursorRect(int rect){ 
	comp_rects_once[STCOMP_CURSOR] = rect;
}

function void setCursorIcon(str icon){ 
	SetRectUserData(getCursorRect(), ST_CPROP1, icon);
}
