
ACTOR Rail_Standard : FastProjectile
{
	Radius				11
	Height				8
	Speed				60
	Damage				1
	DamageType			MarineFire
	
	RenderStyle			Add
	
	Projectile
	+RANDOMIZE
	+MTHRUSPECIES
	
	SeeSound			"x1/fire1"
	//DeathSound			"weapons/rocklx"
	Obituary			"%o smells %k's rails... oh wait, thats $o's melted insides"
        DontHurtShooter
	
	States
	{
		Spawn:
			PLSS A 1 bright
			PLSS B 1
			goto Spawn
		Death:
			PLSE C 8 bright
			PLSE D 6 bright
			PLSE E 4 bright
			stop
	}
}

ACTOR Rail_Taser
