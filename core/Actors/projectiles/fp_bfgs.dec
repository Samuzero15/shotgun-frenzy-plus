// Taken from OP Weapons, so, thank you Empyre.
ACTOR SplashBFG_RailAttack
{
	PROJECTILE
	+LOOKALLAROUND
	+ISMONSTER
	+QUICKTORETALIATE
	+NOTARGET
	+FRIENDLY
	+NOCLIP
	+THRUSPECIES
	+DONTHARMSPECIES
	Species "FrenzyPlayer"
	DamageType "MarineFire"
	Obituary "%o was zapped by %k's BFG 666000."
  Alpha 0.75
	States
	{
	Spawn:
		TNT1 A 0
		TNT1 AAAAA 1 A_Look
		Stop
	See:
		TNT1 A 0
		TNT1 A 1 A_JumpIfCloser(1024,"Attack")
		Stop
	Attack:
		TNT1 A 0
		TNT1 A 0 A_FaceTarget
		TNT1 A 0 A_CustomRailgun(40,0,NONE,"Green",RGF_SILENT | RGF_FULLBRIGHT,1,2,"SplashBFG_RailPuff",0,0,1024,2,3.0)
		Goto Death	
	Death:
		TNT1 A 1
		Stop
	}
}


ACTOR SplashBFG_RailPuff : BulletPuff
{
	-ALLOWPARTICLES
	+ALWAYSPUFF
	+PUFFONACTORS
	+FORCERADIUSDMG
	+NODAMAGETHRUST
	+PUFFGETSOWNER
	+MTHRUSPECIES
	-CLIENTSIDEONLY
	+FOILINVUL
	VSpeed 0
	DamageType "MarineFire"
	Obituary "%o was exploded by %k's boom."
	States
	{
	Spawn:
	Missile:
  Melee:
		TNT1 A 1 Bright
		TNT1 A 1 Bright A_Explode (40, 16, FALSE, FALSE, 16)
    BFE2 ABCD 2 Bright
		stop
	}
}

