actor sfBFGBall
{
  Radius 13
  Height 8
  Speed 25
  Damage 100
  Renderstyle Add
  Alpha 0.75
  DeathSound "weapons/bfgx"
  Projectile
  +RANDOMIZE
  +FORCERADIUSDMG
  DamageType			MarineFire2
  Obituary "$OB_MPBFG_BOOM" // "%o was splintered by %k's BFG."
  Decal BFGLightning
  States
  {
  Spawn:
    BFS1 AB 4 bright
    loop
  Death:
    BFE1 AB 8 bright A_Explode(300,256,0,0,64)
    BFE1 C 8 bright A_BFGSpray("BFGExtra_Marines")
    BFE1 DEF 8 bright
    stop
  }
}

