ACTOR TurretBase : Deploy_Building
{
	states
	{
		Deploy:
			NULL A 1 A_SpawnItemEx("TurretBase_Head", 0, 0, 0, 0, 0, 0, 0, SXF_SETMASTER, args[2])
			stop
	}
}

Actor TurretBase_Stand : TurretStand {
	States
	{
		Spawn:
			TBAS X 1
			goto Super::Stay
	}
}

