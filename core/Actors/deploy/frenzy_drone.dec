
Actor sf_Drone{

	painchance 180
	radius 8
	height 8
	scale 0.7
	mass 400
	DamageType "MarineFire"
	damagefactor "MarineFire", 0.0
	damageFactor "MarineFire2", 0.0
	DamageFactor "MarineFire3", 0.0
    DamageFactor "BFGSplash", 0.0
    DamageFactor "BFGSpray", 0.0
	Species Marines
	MONSTER
	-isMonster
	+FRIENDLY
	+FLOORCLIP
	+NEVERRESPAWN
	+FORCERADIUSDMG
	+NODAMAGETHRUST
	-ACTIVATEMCROSS
	-ACTIVATEPCROSS
	
	-NoBlockMap
	+ThruSpecies
	+MthruSpecies
	
	+LOOKALLAROUND
	+NOBLOCKMONST
