		TNT1 A 0 A_SpawnDebris("Junk_Shard3")
		TNT1 A 0 A_SpawnDebris("Junk_Shard4")
		TNT1 A 0 A_SpawnDebris("Junk_Shard1")
		TNT1 A 0 A_SpawnDebris("Junk_Shard2")
