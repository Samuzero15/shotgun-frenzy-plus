
Actor Junk_Turret{
	health 2
	radius 1
	height 1
	scale 0.5
	+CLIENTSIDEONLY
	+CORPSE
	States
	{
		Spawn:
		"####" "#" 1
		loop
		Crash:
		"####" "#" 555 A_PlaySound("inv/sandbag")
		FadeOut:
		"####" "#" 1 A_FadeOut(0.1)
		goto FadeOut
	}
}

Actor Junk_Turret_Spawn {
	states{
		spawn:
		TNT1 A 0
		TNT1 A 0
