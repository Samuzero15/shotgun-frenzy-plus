ACTOR ChampEffect_Emperor_ParticleEmmit
{
	renderstyle none
	
	+NOCLIP
	+NOGRAVITY
	var int user_parts;
	
	States
	{
		Spawn:
			TNT1 A 1
			TNT1 A 1 A_SetUserVar("user_parts", 10)
		Loopme:
			TNT1 A 0 A_SpawnItemEx("ChampQuickAura_Emperor", 0, 0, 0, 0, 0, 3, 0, SXF_CLIENTSIDE, 0)
			TNT1 A 0 A_Warp(AAPTR_Target, 0,0,0,0,WARPF_NOCHECKPOSITION|WARPF_INTERPOLATE)
			TNT1 A 2 A_SetUserVar("user_parts", user_parts-1)
			TNT1 A 1 A_JumpIf(user_parts <= 0, "Death")
			goto Loopme
		Death:
			TNT1 A 1
			stop
	}
}

