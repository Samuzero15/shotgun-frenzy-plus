Actor MonsterModifier : CustomInventory {
    +INVENTORY.AUTOACTIVATE
    -CountItem
    states{
        Spawn:
            TNT1 A -1
        fail
        Use:
            TNT1 A 0
        stop
        End:
            TNT1 A 0 A_RailWait
        Stop
    }
}

ACTOR MarkOnMap_ThisAsshole : CustomInventory
{
	+INVENTORY.AUTOACTIVATE
	states
	{
	Use:
        TNT1 A 0 A_JumpIfInventory("MarkToken_IAmDead", 1, "NotNeeded")
        TNT1 A 0 A_JumpIfInventory("MarkToken_Marked", 1, "NotNeeded")
        TNT1 A 0 A_SpawnItemEx("marker_enemy", 0, 0, 0, 0, 0, 0, 0, SXF_SETMASTER | SXF_NOCHECKPOSITION)
		Stop
    NotNeeded:
        TNT1 A 0
        stop
	}
}

