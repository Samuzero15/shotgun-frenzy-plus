Actor Patcher : FrenzyWeapon
{
  Weapon.SlotPriority 1.0
  Weapon.SelectionOrder 2500
  Inventory.PickupMessage "You found the Patcher Gun!"
  obituary "%o was shocked by %k's Patcher Gun, which it should'nt happen, because this gun is for cooperative, so, wtf just happened?"
  Weapon.UpSound "w/load1"
  +WEAPON.NOAUTOAIM
  states
  {
	Spawn:
		PLSP A -1
		loop
	
	Ready:
		PLPI A 0
		goto Ready.Raise
		
	Ready.Main:
		TNT1 A 0 ACS_NamedExecuteAlways("Patcher_WeaponLoop", 0)
	Ready.Loop:
		TNT1 A 0 A_JumpIfInventory("Patcher_Mode", 2, "Ready.Sell")
		TNT1 A 0 A_JumpIfInventory("Patcher_Mode", 1, "Ready.Move")
		PLPI A 1 A_WeaponReady
		"####" "#" 0 A_JumpIfInventory("Input_Key", 1, "Ready.Inputs")
		loop
	Ready.Move:
		PLPI D 1 A_WeaponReady
		"####" "#" 0 A_JumpIfInventory("Input_Key", 1, "Ready.Inputs")
		goto Ready.Loop
	Ready.Sell:
		PLPI G 1 A_WeaponReady
		"####" "#" 0 A_JumpIfInventory("Input_Key", 1, "Ready.Inputs")
		goto Ready.Loop

	Select:
		PLPI A 0
		goto Super::Select
	Deselect:
		PLPI A 0
		goto Super::Deselect

	Fire:
        "####" "#" 0 offset (0,32)  A_GiveInventory("WeaponToken_Rised", 1)
        "####" "#" 0 A_JumpIfNoAmmo("Ready.Main")
	Fire.Main:
		PLPI A 0
	Hold:
		PLPI B 3
		PLPI C 4 A_FireBullets(0, 0, 1, 10, "Patcher_FixPuff",  FBF_NOFLASH | FBF_NORANDOM, 256)
		BLAG B 0 A_ReFire
		PLPI A 8
		goto Ready.Loop
	AltFire:
        "####" "#" 0 offset (0,32)  A_GiveInventory("WeaponToken_Rised", 1)
        "####" "#" 0 A_JumpIfNoAmmo("Ready.Main")
	AltFire.Main:
		PLPI A 0
	AltHold:
		TNT1 A 0 A_JumpIfInventory("Patcher_Mode", 2, "AltHold.Sell")
		TNT1 A 0 A_JumpIfInventory("Patcher_Mode", 1, "AltHold.Move")
		PLPI B 6
		PLPI C 8 A_FireBullets(0, 0, 1, 10, "Patcher_UpgradePuff",  FBF_NOFLASH | FBF_NORANDOM, 256)
		PLPI A 8 A_ReFire
		goto Ready.Loop
	AltHold.Move:
		PLPI E 2 A_FireBullets(0, 0, 1, 10, "Patcher_MovePuff_Preview",  FBF_NOFLASH | FBF_NORANDOM, 256) 
		BLAG B 0 A_ReFire
		PLPI F 2 A_FireBullets(0, 0, 1, 10, "Patcher_MovePuff", FBF_NOFLASH | FBF_NORANDOM, 256) 
		PLPI D 8
		goto Ready.Loop
	AltHold.Sell:
		PLPI HG 3
		PLPI G 0 A_ReFire
		PLPI I 8 A_FireBullets(0, 0, 1, 10, "Patcher_SellPuff", FBF_NOFLASH | FBF_NORANDOM, 256)
		goto Ready.Loop
  }
}

