ACTOR Patcher_Puff
{
	+NOINTERACTION
	+BLOODLESSIMPACT
	-ACTIVATEPCROSS
	-RANDOMIZE
	DamageType			"IdlePatcherDmg"
	VSpeed				1
	Mass				5
	
	States
	{
		Spawn:
			TNT1 A 1
			goto Melee
		Melee:
			TNT1 A 1
			stop
	}
}

ACTOR Patcher_FixPuff : Patcher_Puff
{
	DamageType			"PriPatcherDmg"
	States
	{
		Spawn:
			TNT1 A 1
			goto Melee
		Melee:
			PLSE ABC 1
			stop
	}
}

ACTOR Patcher_UpgradePuff : Patcher_Puff
{
	DamageType			"AltPatcherDmg"
	States
	{
		Spawn:
			TNT1 A 1
			goto Melee
		Melee:
			PLSE ABC 1
			stop
		Crash:
			TNT1 A 1
			stop
	}
}

