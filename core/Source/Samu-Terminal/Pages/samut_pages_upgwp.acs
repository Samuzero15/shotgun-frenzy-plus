	int noaccess_y = Vars_Mid_Hei() - 30.00;

	i = Label_Add(noaccess_x, noaccess_y);
	Label_setFont(i,"DBIGFONT");
	Label_setTag (i, listup_vars[UWPAGE_TAG]);
	Label_setText(i, langstring("SAMUT_ARMSTERM_NOACCESS_TITLE",0));
