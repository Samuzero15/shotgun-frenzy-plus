//Basic Add Constructors
function int ImgButton_Add(int x, int y, int w, int h){
	int id = Component_Allocate(STCOMP_IBTN, x, y, w, h);
	if(id != -1){
		ImgButton_SetDefaultProps(id);
	}
	
	return id;
}

