function bool WeaponPack_IsEquipableForPClass(int wid){ 
	int forplayerclass = WeaponPack_GetForClass(wid);
	str playclass = GetActorClass(CONST_TID_PLAYER + PlayerNumber());
	str char_everyone = "#E";
	str char_notClass = "$";
	// #E = Everyone can use this weapon pack.
	// $PlayerClass = Not for this class (In conjunction with the @ character.)

	//log(s:"[WeaponPack_IsEquipableForPClass] forplayerclass: '", s:forplayerclass, s:"', playerclass: '", s:playclass, s:"'");
	//log(s:"forplayerclass: '", s:forplayerclass, s:"'");
	if(forplayerclass == 0 || StrIEquals(forplayerclass, "0")) return true;
	
	// Check if the player class name is contained in the forplayerclass string
	// Also check that it does not contain a '$' before the player class name.
	if(StrContainsI(strparam(s:char_notClass, s:forplayerclass), strparam(s:char_notClass, s:playclass))){
		//log(s:"Hey!, This guy does'nt use this pack!");
		return false;
	}

	return StrContainsI(forplayerclass, playclass) || StrContainsI(forplayerclass, char_everyone);
}
