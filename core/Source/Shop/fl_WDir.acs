function bool WeaponPack_isOwned(int wid){
	bool res = false;
		for (int i = 0; (i < fp_WeaponStack) && !res; i++){
			if(Weapon_getWepPack(i) == wid){
				
				res = Weapon_OwnedSameKind(i);
			}
		}
	return res;
}

function int Weapon_Add(str actor, int pack, str pkey, str lang){
	int wid = fp_WeaponStack;
	int full_lang = 0;
	if(fp_WpPacks[pack][6] != 0 && pack >= 0){
		full_lang = strparam(l:strparam(s:fp_WpPacks[pack][6], s:"_", s:lang));
	}else {
		full_lang = lang;
	}
	

	fp_Wpns[wid][0] = actor;
	fp_Wpns[wid][1] = strparam(l:strparam(s:"WEPS_", s:full_lang, s:"_NAME"));
	fp_Wpns[wid][2] = pack;
	fp_Wpns[wid][3] = strparam(l:strparam(s:"WEPS_", s:full_lang, s:"_DESC"));
	fp_Wpns[wid][7] = full_lang; // Language id
	
	if(strlen(pkey) != 0) {
		fp_Wpns[wid][4] = strparam(s:"pr_wr_", s:pkey);
		fp_Wpns[wid][5] = pkey;
		}
	else if(pack > 0) {
		fp_Wpns[wid][4] = strparam(s:"pr_wr_", s:fp_WpPacks[pack][4]);
		fp_Wpns[wid][5] = fp_WpPacks[pack][4];
		}
	else{
		fp_Wpns[wid][4] = "null";
		fp_Wpns[wid][5] = "null";
		}
	
	// Initialize upgrades.
	fp_Wpns[wid][6] = 0; 
	
	fp_WeaponStack++;
	return wid;
}

