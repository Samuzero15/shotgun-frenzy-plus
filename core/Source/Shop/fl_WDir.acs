function int WeaponPack_Add(int cat, str pkey, int game_gain, str lang){
	int wid = fp_WeaponPackStack;
	fp_WpPacks[wid][0] = strparam(l:strparam(s:"WEPS_", s:lang, s:"_NAME"));
	fp_WpPacks[wid][1] = cat;
	fp_WpPacks[wid][2] = strparam(l:strparam(s:"WEPS_", s:lang, s:"_DESC"));
	fp_WpPacks[wid][3] = strparam(s:"pr_wb_", s:pkey);
	fp_WpPacks[wid][4] = pkey;
	fp_WpPacks[wid][5] = game_gain;
	fp_WpPacks[wid][6] = lang;
	fp_WeaponPackStack++;
	return wid;
}

