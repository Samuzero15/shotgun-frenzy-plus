function void AmmoTakeLeftOvers (str ammo){
	if(getAmmoCapacity(ammo) < CheckInventory(ammo)){
		TakeInventory(ammo, CheckInventory(ammo) - getAmmoCapacity(ammo));
	}
}

script "Ammo_UpdateCaps" (void) {
	int p_back = CheckInventory("p_Backpack");
	int g_back = (CheckInventory("g_Backpack") || CheckInventory("Cheat_Ammo"));
	int ammo_rune = CheckInventory("RuneAmmunition");

	for (int i = 0; i < fp_AmmoDefStack; i++) {
		str ammo_name = fp_AmmoList[i].name;
		int base_max_amount = fp_AmmoList[i].base_max_amount;
		int max_cap = fp_AmmoList[i].max_cap;
		bool dont_expand = fp_AmmoList[i].not_expandable;
		int pb_extra_ammo = fp_AmmoList[i].pb_extra_ammo;
		int cap = base_max_amount;
		if (!dont_expand) {
			cap = base_max_amount + (base_max_amount * g_back + pb_extra_ammo * p_back);
			if (ammo_rune) {
				cap = cap * 3 / 2; // Multiply by 1.5 if ammo_rune is active
			}
		} else continue; // TODO: Remove this Anti-crash line, after a Zandro update
		// If max_cap is not zero, limit cap to max_cap
		if (max_cap != 0 && cap > max_cap) {
			cap = max_cap;
		}
		SetAmmoCapacity(ammo_name, cap);
		AmmoTakeLeftOvers(ammo_name);
	}
}

script "Ammo_ResetCaps" (void) {
	TakeInventory("p_Backpack", 1); // Reset token.
	TakeInventory("g_Backpack", 1); // Reset token.

	for (int i = 0; i < fp_AmmoDefStack; i++) {
		
		// TODO: Remove this condition, after updating Zandronum.
		if(fp_AmmoList[i].not_expandable) 
			continue;
			
		str ammo_name = fp_AmmoList[i].name;
		int base_max_amount = fp_AmmoList[i].base_max_amount;
		SetAmmoCapacity(ammo_name, base_max_amount);
	}
}

script "SFPlus_WDir_GiveStarterItems" (void)
{
	// Clear inventory first
	ClearInventory();

	// Get player's class name
	str currentPlayerClass = GetActorClass(CONST_TID_PLAYER + PlayerNumber());

	// Find matching class index
	int classIdx = -1;
	for (int i = 0; i < fp_StarterClassCount; i++)
	{
		if (StrEquals(fp_StarterClassNames[i], currentPlayerClass))
		{
			classIdx = i;
			break;
		}
	}

	// If found, give starter items
	if (classIdx != -1)
	{
		for (int j = 0; j < fp_StarterItemStack[classIdx]; j++)
		{
			str item = fp_StarterItems[classIdx][j].item;
			int amount = fp_StarterItems[classIdx][j].amount;
			bool equipWeapon = fp_StarterItems[classIdx][j].equipweapon;
			if (item != "")
			{
				GiveInventory(item, amount);
				if (equipWeapon)
				{
					delay(1);
					SetWeapon(item); // If it is a weapon, set it as the current weapon
				}
			}
		}
	}
}

/*	Adds a weapon pack	*/
function void SFWEPDEF_AddWeaponPack (int line) {
	int cat = LumpRead_NextArg (line, LUMPR_VALUE_INT);
	if(fp_WpCategoryStack[cat] >= FP_WEP_PACKS_PER_CATEGORY){
		log(s:"(FL_WDIR.acs) Can't add more weapon packs in this category, ", d:FP_WEP_PACKS_PER_CATEGORY, s:" packs Limit reached.");
		return;
	}
	int wpid = fp_WeaponPackStack;

	fp_WpCategory[cat][fp_WpCategoryStack[cat]] = wpid;
	fp_WpCategoryStack[cat]++;
	WeaponPackT wp;
	wp.category = cat;
	wp.langstring = LumpRead_NextArg (line, LUMPR_VALUE_STR);

	str lang_weppack = wp.langstring;
	wp.name = SFWEPDEF_WepLanguageValue (lang_weppack, FP_LANGUAGEPROP_NAME);
	wp.description = SFWEPDEF_WepLanguageValue (lang_weppack, FP_LANGUAGEPROP_DESC);
	wp.price = LumpRead_NextArg (line, LUMPR_VALUE_CVAR);
	wp.mon_pressure = LumpRead_NextArg (line, LUMPR_VALUE_INT);
	wp.forclass = LumpRead_NextArgDefault (line, LUMPR_VALUE_STR, 0);
	memcpy(fp_WpPacks[wpid], wp);
	fp_WeaponPackStack++;
}

/*	Adds a weapon  */
function void SFWEPDEF_AddWeapon (int line, bool nopack) {
	int weppack_id = -1;
	if(!nopack){
		weppack_id = WeaponPack_Find(LumpRead_NextArg(line, LUMPR_VALUE_STR));
	}
	int wepid = fp_WeaponStack;
	WeaponT wep;
	wep.actor = LumpRead_NextArg (line, LUMPR_VALUE_STR);
	str lang_wep = LumpRead_NextArg (line, LUMPR_VALUE_STR);
	wep.langstring = lang_wep;
	wep.pack_id = weppack_id;

	if(weppack_id >= 0) {
		// If the weapon is part of a pack, we need to get the language string from the pack.
		//str lang_weppack = fp_WpPacks[weapon_pack_id][FP_WDIR_WPPACK_LANGSTRING];
		str lang_weppack = fp_WpPacks[weppack_id].langstring;
		lang_wep = strparam(s:lang_weppack, s:"_", s:lang_wep);
		wep.langstring = lang_wep;
	}

	wep.name = SFWEPDEF_WepLanguageValue (lang_wep, FP_LANGUAGEPROP_NAME);
	wep.description = SFWEPDEF_WepLanguageValue (lang_wep, FP_LANGUAGEPROP_DESC);
	wep.icon = SFWEPDEF_WepLanguageValue (lang_wep, FP_LANGUAGEPROP_ICON);
	wep.price = 0;
	if(weppack_id >= 0) 
		wep.price = LumpRead_NextArg (line, LUMPR_VALUE_CVAR);

	memcpy(fp_Wpns[wepid], wep);
	fp_WeaponStack++;
}

/*	Adds a weapon upgrade	*/
function void SFWEPDEF_AddWeaponUpgrade(int line){
	str base_weapon_actor = LumpRead_NextArg(line, LUMPR_VALUE_STR);
	int weapon_id = Weapon_Find(base_weapon_actor);
	int uptype = LumpRead_NextArg (line, LUMPR_VALUE_INT);
	if(weapon_id == -1){
		log(s:"(FL_WDIR.acs) Base weapon '", s:base_weapon_actor, s:"' not found, cannot add Type ", d:uptype, s:" upgrade.");
		return;
	}
	int wepup_count = fp_Wpns[weapon_id].upsnum;
	if(wepup_count >= FP_WEPUPS){
		log(s:"(FL_WDIR.acs) Can't add more weapon upgrades for this weapon, ", d:FP_WEPUPS, s:" weapons Limit reached.");
		return;
	}
	str lang_wep = fp_Wpns[weapon_id].langstring;
	

	fp_WpUps[weapon_id][wepup_count].up_type = uptype;
	fp_WpUps[weapon_id][wepup_count].actor = LumpRead_NextArg (line, LUMPR_VALUE_STR);
	fp_WpUps[weapon_id][wepup_count].name = SFWEPDEF_WepLangVal_Upgrade (lang_wep, uptype, FP_LANGUAGEPROP_NAME);
	fp_WpUps[weapon_id][wepup_count].description = SFWEPDEF_WepLangVal_Upgrade (lang_wep, uptype, FP_LANGUAGEPROP_DESC);
	fp_WpUps[weapon_id][wepup_count].ups_price = LumpRead_NextArg (line, LUMPR_VALUE_CVAR);
	fp_WpUps[weapon_id][wepup_count].rcy_price = LumpRead_NextArg (line, LUMPR_VALUE_CVAR);
	fp_Wpns[weapon_id].upsnum++;
}

/*	Replaces a weapon pack	*/
function void SFWEPDEF_ReplaceWeaponPack(int line) {
	int i = 0;
	str pack_to_replace = LumpRead_NextArg(line, LUMPR_VALUE_STR);
	str pack_replacer = LumpRead_NextArg(line, LUMPR_VALUE_STR);
	int new_category = LumpRead_NextArg(line, LUMPR_VALUE_INT);
	int pack_to_replace_id = WeaponPack_Find(pack_to_replace);

	if(pack_to_replace_id == -1){
		log(s:"(FL_WDIR.acs) Replaced weapon pack '", s:pack_to_replace, s:"' not found. Failed to replace with: '", s:pack_replacer, s:"'.");
		return;
	}

	file_wpid = pack_to_replace_id;

	for(i = 0; i < FP_WEAPONS && pack_to_replace_id != -1; i++){
		if(Weapon_GetWepPack(i) == pack_to_replace_id){
			Weapon_Clear(i);
		}
	}
	WeaponPackT wp;
	wp.category = new_category > WEAPON_SET_HIDDEN ? new_category : fp_WpPacks[file_wpid].category;
	wp.langstring = pack_replacer;
	wp.name = SFWEPDEF_WepLanguageValue(pack_replacer, FP_LANGUAGEPROP_NAME);
	wp.description = SFWEPDEF_WepLanguageValue(pack_replacer, FP_LANGUAGEPROP_DESC);
	wp.price = LumpRead_NextArg(line, LUMPR_VALUE_CVAR);
	wp.mon_pressure = LumpRead_NextArg(line, LUMPR_VALUE_INT);
	wp.forclass = LumpRead_NextArgDefault (line, LUMPR_VALUE_STR, 0);
	memcpy(fp_WpPacks[file_wpid], wp);
}

/*	Replaces a weapon	*/
function void SFWEPDEF_ReplaceWeapon(int line) {
	int i = 0;
	str weapon_to_replace = LumpRead_NextArg (line, LUMPR_VALUE_STR);
	str weapon_replacer = LumpRead_NextArg (line, LUMPR_VALUE_STR);
	int wepid = Weapon_Find(weapon_to_replace);

	if(wepid == -1){
		log(s:"(FL_WDIR.acs) Replaced weapon '", s:weapon_to_replace, s:"' not found. Failed to replace with: '", s:weapon_replacer, s:"'.");
		return;
	}
	int wep_pack_id = Weapon_GetWepPack(wepid);
	WeaponUpgrades_Clear(wepid);

	fp_Wpns[wepid].pack_id = wep_pack_id;
	fp_Wpns[wepid].actor = weapon_replacer;
	str lang_wep = LumpRead_NextArg (line, LUMPR_VALUE_STR);
	fp_Wpns[wepid].langstring = lang_wep;

	if(wep_pack_id >= 0) {
		// If the weapon is part of a pack, we need to get the language string from the pack.
		str lang_weppack = fp_WpPacks[wep_pack_id].langstring;
		lang_wep = strparam(s:lang_weppack, s:"_", s:lang_wep);
		fp_Wpns[wepid].langstring = lang_wep;
	} 

	fp_Wpns[wepid].name = SFWEPDEF_WepLanguageValue (lang_wep, FP_LANGUAGEPROP_NAME);
	fp_Wpns[wepid].description = SFWEPDEF_WepLanguageValue (lang_wep, FP_LANGUAGEPROP_DESC);
	fp_Wpns[wepid].icon = SFWEPDEF_WepLanguageValue (lang_wep, FP_LANGUAGEPROP_ICON);
	
	if(wep_pack_id >= 0) 
		fp_Wpns[wepid].price = LumpRead_NextArg (line, LUMPR_VALUE_CVAR);
	
	fp_Wpns[wepid].forclass = LumpRead_NextArg (line, LUMPR_VALUE_STR);
}

function void SFWEPDEF_ReplaceWeaponUpgrade(int line) {
	int i, j = 0;
	str parent_weapon = LumpRead_NextArg (line, LUMPR_VALUE_STR);
	str wepup_to_replace = LumpRead_NextArg (line, LUMPR_VALUE_INT);
	str wepup_actor_replacer = LumpRead_NextArg (line, LUMPR_VALUE_STR);
	
	int weapon_parent_id = Weapon_Find(parent_weapon);
	int wepup_to_replace_id = WeaponUpgrade_Find(weapon_parent_id, wepup_to_replace);

	if(weapon_parent_id == -1){
		log(s:"(FL_WDIR.acs) Parent weapon '", s:parent_weapon, s:"' not found. Failed to replace weapon upgrade.");
		return;
	}

	if(wepup_to_replace_id == -1){
		log(s:"(FL_WDIR.acs) Replaced weapon upgrade Type '", d:wepup_to_replace, s:"' not found in weapon '", s:parent_weapon, s:"'. Failed to replace with: '", s:wepup_actor_replacer, s:"'.");
		return;
	}

	str lang_wep = fp_Wpns[weapon_parent_id].langstring;
	int uptype = wepup_to_replace;

	fp_WpUps[weapon_parent_id][wepup_to_replace_id].up_type = uptype;
	fp_WpUps[weapon_parent_id][wepup_to_replace_id].actor = wepup_actor_replacer;
	fp_WpUps[weapon_parent_id][wepup_to_replace_id].name = SFWEPDEF_WepLangVal_Upgrade (lang_wep, uptype, FP_LANGUAGEPROP_NAME);
	fp_WpUps[weapon_parent_id][wepup_to_replace_id].description = SFWEPDEF_WepLangVal_Upgrade (lang_wep, uptype, FP_LANGUAGEPROP_DESC);
	fp_WpUps[weapon_parent_id][wepup_to_replace_id].ups_price = LumpRead_NextArg (line, LUMPR_VALUE_CVAR);
	fp_WpUps[weapon_parent_id][wepup_to_replace_id].rcy_price = LumpRead_NextArg (line, LUMPR_VALUE_CVAR);
}

function void SFWEPDEF_StarterItem(int line){
	str classPlayer = LumpRead_NextArg(line, LUMPR_VALUE_STR);
	str inventoryItem = LumpRead_NextArg(line, LUMPR_VALUE_STR);
	int amount = LumpRead_NextArgDefault(line, LUMPR_VALUE_INT, 1);

	int classIdx = StarterClass_FindOrAdd(classPlayer);
	if(classIdx == -1) {
		log(s:"StarterItem: Maximum player classes reached.");
		return;
	}
	StarterItem_Add(classIdx, classPlayer, inventoryItem, amount, false);
}

function void SFWEPDEF_StarterWeapon(int line){
