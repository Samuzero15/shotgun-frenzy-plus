Script "SFPlus_WDir_SFWEPDEFReadLine" (int line, int line_num) {
	str op = LumpRead_NextArg(line, LUMPR_VALUE_STR);
	//log(s:"OP: ", s:op);
	SFWEPDEF_FUNC( WDEF_TK_AddWeaponPack, 		SFWEPDEF_AddWeaponPack(line), 			5, 6);
	SFWEPDEF_FUNC( WDEF_TK_AddWeapon, 			SFWEPDEF_AddWeapon(line, false), 		4, 6);
	SFWEPDEF_FUNC( WDEF_TK_AddWeaponNoPack, 	SFWEPDEF_AddWeapon(line, true), 		4, 6);
	SFWEPDEF_FUNC( WDEF_TK_AddWeaponUp, 		SFWEPDEF_AddWeaponUpgrade(line), 		6, 6);
	SFWEPDEF_FUNC( WDEF_TK_ClearAllWeapons, 	SFWEPDEF_ClearAllWeapons(), 			1, 1);
	SFWEPDEF_FUNC( WDEF_TK_ReplaceWeapon, 		SFWEPDEF_ReplaceWeapon(line), 			6, 6);
	SFWEPDEF_FUNC( WDEF_TK_ReplaceWeaponPack, 	SFWEPDEF_ReplaceWeaponPack(line), 		6, 7);
	SFWEPDEF_FUNC( WDEF_TK_ReplaceWeaponUp, 	SFWEPDEF_ReplaceWeaponUpgrade(line), 	6, 6);
	SFWEPDEF_FUNC( WDEF_TK_AddAmmo, 			SFWEPDEF_AddAmmo(line), 				4, 8);
	SFWEPDEF_FUNC( WDEF_TK_ClearAllAmmo, 		SFWEPDEF_ClearAllAmmo(), 				1, 1);
	SFWEPDEF_FUNC( WDEF_TK_StarterItem, 		SFWEPDEF_StarterItem(line),				3, 4);
	SFWEPDEF_FUNC( WDEF_TK_StarterWeapon, 		SFWEPDEF_StarterWeapon(line), 			3, 3);
	SFWEPDEF_FUNC( WDEF_TK_ClearClasses, 		SFWEPDEF_ClearClasses(), 				1, 1);

	log(s:"fl_WDir: Invalid command: '", s:op, s:"'", s:", line=", s:line);
}

function void SFWEPDEF_ClearClasses (void){
	// Clear all starter classes and their items
	StarterItemT sc;
	for(int c = 0; c < fp_StarterClassCount; c++) {
		fp_StarterClassNames[c] = "";
		for(int i = 0; i < FP_STARTER_ITEMS_PER_CLASS; i++) {
			memcpy(fp_StarterItems[c][i], sc);
		}
		fp_StarterItemStack[c] = 0;
	}
	fp_StarterClassCount = 0;
}

